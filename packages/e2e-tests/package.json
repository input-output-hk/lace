  "name": "@lace/e2e-tests",
  "version": "1.0.0",
  "scripts": {
    "build": "shx echo 'No build required'",
    "test": "shx echo 'User test:local'",
    "test:local:chrome": "wdio run wdio.conf.chrome.ts",
    "test:local:edge": "wdio run wdio.conf.edge.ts",
    "cleanup": "rm -rf node_modules logs reports screenshots",
    "test:coverage": "shx echo 'disabled due to lack of a framebuffer. Please use test:local for local testing'",
    "lint": "eslint -c .eslintrc.js .",
    "lint:fix": "eslint -c .eslintrc.js . --fix",
    "pack-chrome-extension": "node ./src/utils/packExtension.ts",
    "safari:build": "sh tools/convertChromeExtToSafari.sh",
    "safari:open": "sh tools/openSafariExtension.sh",
    "allure:generate": "./node_modules/.bin/allure generate -c ./reports/allure/results -o ./reports/allure/report",
    "allure:open": "allure open ./reports/allure/report/",
    "allure": "npm run allure:generate && npm run allure:open",
    "allure:clean": "rm -rf ./reports/allure",
    "prettier": "prettier --write ."
  },
  "devDependencies": {
    "@rpii/wdio-report-events": "8.0.2",
    "@types/flat": "5.0.2",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "@wdio/allure-reporter": "8.8.6",
    "@wdio/cli": "8.8.6",
    "@wdio/config": "8.8.6",
    "@wdio/cucumber-framework": "8.8.6",
    "@wdio/local-runner": "8.8.6",
    "@wdio/selenium-standalone-service": "8.8.6",
    "@wdio/spec-reporter": "8.8.6",
    "@wdio/types": "8.8.6",
    "@wdio/devtools-service": "8.8.6",
    "allure-commandline": "^2.21.0",
    "clipboardy": "2.3.0",
    "eslint": "8.38.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-wdio": "8.0.14",
    "flat": "5.0.2",
    "npm-run-all": "4.1.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "webdriverio": "8.8.6"
  },
  "dependencies": {
    "@types/chai": "4.3.4",
    "chai": "4.3.7"
  }
}
