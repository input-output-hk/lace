{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "./",
    "baseUrl": "../src",
    "paths": {
      "@src/*": ["*"]
    },
    "declarationDir": "./",
    "declaration": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist"]
}
