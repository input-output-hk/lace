{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "./",
    "baseUrl": "../src",
    "paths": {
      "@src/*": ["*"],
      "@ui/*": ["ui/*"]
    },
    "declarationDir": "./",
    "declaration": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "references": [
    {
      "path": "../../common/src"
    }
  ],
  "exclude": ["dist/", "shared-wallets"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"]
}
