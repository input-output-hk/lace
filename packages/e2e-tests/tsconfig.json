{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/cucumber-framework",
      "expect-webdriverio",
      "chai",
      "@types/chai-sorted",
      "@types/chai-string",
      "@wdio/devtools-service",
      "wdio-intercept-service"
    ],
    "lib": ["es2021", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "../../"
  },
  "include": ["."],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "files": true
  }
}
